<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitRepoProject" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogCustomTheme" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="HorizontalWrap" parent="WrapLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="CustomProgressBarStyle">
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextStyle18" parent="WrapLayout">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#181818</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
</resources>